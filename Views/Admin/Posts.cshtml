@model List<barcapakistan.Post>
@{
    ViewBag.Title = "Admin Panel";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
    
}

<div class="container">
    <div class="row">
        
        <div class="col-lg-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <span class="glyphicon glyphicon-bell"></span> Posts
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Sr. #</th>
                                    <th>Title</th>
                                    <th></th>
                                    <th></th>
                                    <th></th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                
                                @{
                                    int i = 1;
                                    foreach (var post in @Model)
                                    {
                                        <tr>
                                            <td>@i</td>
                                            <td>@post.Title</td>
                                            <td class="text-center"><a href="/Home/ViewArticle?id=@post.ID">Show</a></td>
                                            <td class="text-center"><a href="/Admin/EditPost?id=@post.ID">Edit</a></td>
                                            <td class="text-center"><a href="/Admin/DeletePost?id=@post.ID">Delete</a></td>
                                        </tr>
                                        i++;
                                    }
                                 }

                                
                            </tbody>
                        </table>
                    </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
</div>
</div>