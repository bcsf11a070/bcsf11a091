@{
    ViewBag.Title = "Edit Post";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml";
}

<div class="container">
    <div class="row">

        <div class="col-md-12">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="text-center"><strong>Edit Post</strong></h3>
                </div>
                <div class="panel-body">

                    <form role="form" method="post" action="/Admin/UpdatePost?id=@Model.ID">
                        <div class="input-group input-group-lg">
                            <label>Title</label>
                            <input name="Title" value="@Model.Title"type="text" class="form-control" placeholder="">
                        </div>


                        @*<div class="form-group">
                                <label>Image</label>
                                <input type="file" class="form-control" >
                            </div>*@

                        <div class="form-group">
                            <label for="comment">Post Content:</label>
                            <textarea name="Content"   class="form-control" rows="10" cols="100" id="post">@Model.Content</textarea>
                        </div>

                        <hr>
                        <button type="submit" class="btn btn-primary btn-lg"><strong>SUBMIT</strong></button>
                    </form>
                </div>
            </div>

            <!-- /.row -->

        </div>


    </div>
</div>